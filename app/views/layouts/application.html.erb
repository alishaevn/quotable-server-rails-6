<!DOCTYPE html>
<html>
  <head>
    <title>QuotableServerRails6</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Quotes</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li><%= link_to "Home", home_path, class: "nav-link" %></li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li><%= link_to "Add", new_quote_path, class: "nav-link" %></li>
      </ul>
    </div>
  </nav>

  <%= yield %>
  </body>
</html>
