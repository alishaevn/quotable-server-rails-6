<h1>Add a quote</h1>

<%= form_for :quote, url: quotes_path do |q| %>
  <p>
    <%= q.label :date %><br>
    <%= q.date_field :date %>
  </p>

  <p>
    <%= q.label :author %><br>
    <%= q.text_field :author %>
  </p>

  <p>
    <%= q.label :body %><br>
    <%= q.text_area :body %>
  </p>

  <p>
    <%= q.submit %>
  </p>
<% end %>